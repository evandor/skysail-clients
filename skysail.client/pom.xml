<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.twenty11.skysail</groupId>
        <artifactId>skysail.build.maven.parentPom</artifactId>
        <version>0.1.2</version>
    </parent>

    <artifactId>skysail.client</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>skysail common for clients</name>
    <packaging>bundle</packaging>

    <scm>
        <!-- read access -->
        <connection>scm:git:git@github.com:evandor/skysail-clients.git</connection>
        <!-- write access -->
        <developerConnection>scm:git:git@github.com:evandor/skysail-clients.git</developerConnection>
        <!-- A publicly browsable repository. For example, via ViewCVS.-->
        <url>scm:git:git@github.com:evandor/skysail-clients.git</url>
    </scm>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <version>2.3.4</version>
                <configuration>
                    <instructions>
                        <_include>-osgi.bnd</_include>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <!-- Shared version number properties -->
    <properties>
        <org.restlet.version>2.0.9</org.restlet.version>
    </properties>
    

	<dependencies>

		<dependency>
			<groupId>de.evandor</groupId>
			<artifactId>skysail.common</artifactId>
			<version>[0.2.7-SNAPSHOT, 0.3)</version>
		</dependency>

		<!-- restlet -->
		<dependency>
			<groupId>org.restlet.jee</groupId>
			<artifactId>org.restlet</artifactId>
			<version>${org.restlet.version}</version>
		</dependency>
		<dependency>
			<groupId>org.restlet.jee</groupId>
			<artifactId>org.restlet.ext.servlet</artifactId>
			<version>${org.restlet.version}</version>
		</dependency>
		<dependency>
			<groupId>org.restlet.jee</groupId>
			<artifactId>org.restlet.ext.xml</artifactId>
			<version>${org.restlet.version}</version>
		</dependency>
		<dependency>
			<groupId>org.restlet.jee</groupId>
			<artifactId>org.restlet.ext.xstream</artifactId>
			<version>${org.restlet.version}</version>
		</dependency>
		<dependency>
			<groupId>org.restlet.jee</groupId>
			<artifactId>org.restlet.ext.slf4j</artifactId>
			<version>${org.restlet.version}</version>
		</dependency>
		<dependency>
			<groupId>org.restlet.jee</groupId>
			<artifactId>org.restlet.ext.json</artifactId>
			<version>${org.restlet.version}</version>
		</dependency>

	</dependencies>

	<repositories>
		<!-- need to find parent pom -->
		<repository>
			<id>central</id>
			<name>All evandor-hosted artifacts</name>
			<url>http://nexus.twentyeleven.de/content/groups/public</url>
			<releases>
				<updatePolicy>always</updatePolicy>
			</releases>
		</repository>
	</repositories>

</project>